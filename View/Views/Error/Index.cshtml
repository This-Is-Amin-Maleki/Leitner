@using ModelsLeit.DTOs
@model ErrorDto
@{
    ViewData["Title"] = "Error";
}

<div class="modal fade" id="error" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="errorLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title text-danger" id="errorLabel">Error</h1>
            </div>
            <div class="modal-body">
                <h5>An error occurred while processing your request.</h5>
                <p>
                    We have detected this error and are currently working on a solution. Thank you for your patience!
                </p>
                <br />
                <br />

                @if (Model.ShowRequestId)
                {
                    <code class="float-end" style="font-size:.6em"><small class="text-muted">Request ID: </small> @Model.RequestId</code>
                }
            </div>
            <div class="modal-footer">
                <button type="button" onclick="location.reload();" class="btn btn-outline-danger">Try Again!</button>
            </div>
        </div>
    </div>
</div>
                
@section Scripts {<script>
        $(document).ready(function() {
            $('#error').modal('show');
        });
    </script>
}