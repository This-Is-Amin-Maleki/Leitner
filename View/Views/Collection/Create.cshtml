@using ModelsLeit.ViewModels
@using SharedLeit
@model CollectionViewModel

@{
    ViewData["Title"] = "Create a new Collection";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control" asp-items="@Html.GetEnumSelectList<CollectionStatus>()">
            <option disabled selected>Please Select Once</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <br />
    <a asp-action="Index" class="btn btn-dark">Return</a>
    <button type="submit" class="btn btn-primary">Save</button>
</form>