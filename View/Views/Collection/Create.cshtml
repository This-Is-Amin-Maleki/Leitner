@using ModelsLeit.DTOs.Collection
@using SharedLeit

@model CollectionCreationDto

@{
    ViewData["Title"] = "Create a new Collection";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Index" class="float-end btn btn-dark"><i class="bi bi-arrow-left-square"></i> Return</a>
<br />
<br />
<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="float-end"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i> Save</button>
</form>