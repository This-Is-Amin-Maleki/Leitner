@using Models.ViewModels
@using Shared
@model CollectionViewModel

@{
    ViewData["Title"] = $"Edit {Model.Name} Collection";
}

<h2>Edit <b>@Model.Name</b> Collection</h2>

<form id="EditForm" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control" asp-items="@Html.GetEnumSelectList<CollectionStatus>()">
            <option disabled selected>Please Select Once</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <br />
    <input type="hidden" asp-for="Id" />
    <a asp-action="Index" class="btn btn-dark">Return</a>
    <a href="#" id="DeleteButton" class="btn btn-danger">Delete</a>
    <button type="submit" class="btn btn-success" autofocus>Save</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#DeleteButton').click(function () {
                if ((confirm('Are you sure to DELETE "@(Html.Raw(Model.Name))" Collection?'))) {
                    var currentUrl = $('#EditForm').attr('action');
                    var newUrl = currentUrl.replace('Edit', 'Delete');
                    $('#EditForm').attr('action', newUrl);
                    $('#EditForm').submit();
                }
            });
        });
    </script>
}