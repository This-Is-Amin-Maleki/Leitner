@using ModelsLeit.DTOs.Card
@model CardDto

@{
    ViewData["Title"] = $"Card {Model.Ask} Details";
}
<h2>Card <b>@Model.Ask</b> Details</h2>
<a asp-action="Index" asp-route-id="@Model.Collection.Id" class="float-end btn btn-dark"><i class="bi bi-arrow-left-square"></i> Return</a>
<br />
<div
    <dl>
        <dt>Collection:</dt>
        <dd>@Model.Collection.Name</dd>
        <dt>Ask:</dt>
        <dd>@Model.Ask</dd>
        <dt>Answer:</dt>
        <dd>@Model.Answer</dd>
        @Html.Raw(!string.IsNullOrEmpty(Model.Description) ?
                     $"<dt>Description:</dt><dd>{Model.Description}</dd>" :
                              string.Empty)
        @Html.Raw(Model.HasMp3 ?
                    "<dt>Assets:</dt><dd><i class=\"bi bi-volume-down\"></i></dd>" :
                     string.Empty)
    </dl>
    <br />
</div>

@section Scripts {
    <style>
        [b] {
            text-decoration: wavy underline;
            text-decoration-color: skyblue !important;
        }</style>
    <script>
        $(document).ready(function () {
            $('[b]').each(function () {
                $(this).attr("w", "").removeAttr("b").click(function () {
                    $(this).attr("b", "").removeAttr("w");
                });
            });
        });
    </script>
}