@using ModelsLeit.DTOs.User

@model UserActiveTFADto

@{
    ViewData["Title"] = "Enable 2FA Activation";
}

<h2>@ViewData["Title"]</h2>
<br />
<form method="post">
   
    <p>
        Enter below Code to your authenticator App or Scan Qr!!
        <code class="h5 w-100 text-center d-block text-danger">@Model.Token</code>
    </p>
    <center id="qr"></center>
    <br />

    <div class="input-group mb-2">
        <span class="input-group-text"><i class="bi bi-hash"></i></span>
        <input name="model" class="form-control" placeholder="Code">
    </div>
    <br />
    <button type="submit" class="btn btn-primary"><i class="bi bi-lock"></i> Enable</button>

</form>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <!--script src="~/js/qrcode.min.js"></script-->
    <script>
        new QRCode(document.getElementById("qr"), "@(Model.QRUri)");
    </script>
}